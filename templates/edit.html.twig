{% extends 'base.html.twig' %}

{% block title %}
	{{ blog.title }}
{% endblock %}

{% block body %}
	<h1>Edit a blog</h1>

	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-primary" role="alert">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}

	{{ form_start(form) }}
	<div class="form-group col-md-3">

		<label>{{ form_label(form.title) }}</label>
		{{ form_widget(form.title, { 'attr': {'class': 'form-control', 'value': blog.title} }) }}

		<small>{{ form_help(form.title) }}</small>

		<div class="form-error">
			{{ form_errors(form.title) }}
		</div>
	</div>

	<div class="form-group col-md-3">

		<label>{{ form_label(form.short_description) }}</label>

		{{ form_widget(form.short_description, { 'attr': {'class': 'form-control', 'value': blog.getShortDescription()} }) }}

		<small>{{ form_help(form.short_description) }}</small>

		<div class="form-error">
			{{ form_errors(form.short_description) }}
		</div>

	</div>

	<div class="form-group col-md-6">

		<label>{{ form_label(form.body) }}</label>

		{{ form_widget(form.body, { 'attr': {'class': 'form-control', 'value': blog.body} }) }}

		<small>{{ form_help(form.body) }}</small>

		<div class="form-error">
			{{ form_errors(form.body) }}
		</div>
	</div>

	<div class="form-group col-md-6">

		<label>{{ form_label(form.image) }}</label>
		<br/>
		<small>L'immagine corrente Ã¨:
			{{ blog.image }}</small>
		{{ form_widget(form.image, { 'attr': {'class': 'form-control-file'} }) }}

		<small>{{ form_help(form.image) }}</small>

		<div class="form-error">
			{{ form_errors(form.image) }}
		</div>
	</div>

	<div class="form-group col-md-3">

		<label>{{ form_label(form.category) }}</label>

		{{ form_widget(form.category, { 'attr': {'class': 'form-control'} }) }}

		<small>{{ form_help(form.category) }}</small>

		<div class="form-error">
			{{ form_errors(form.category) }}
		</div>
	</div>

	<div class="col-md-3">
		<input type="submit" class="btn btn-primary"/>
	</div>

	{{ form_end(form) }}
{% endblock %}
