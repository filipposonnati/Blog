{% extends 'base.html.twig' %}

{% block title %}
	Create a new blog
{% endblock %}

{% block body %}
	<h1>Create new blog entry.</h1>

	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-primary" role="alert">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}

	<div class="form-group">

		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

		{#{{ form_start(form) }}#}

		{{ form_errors(form) }}

		<div class="form-group col-md-3">
			<label>{{ form_label(form.title) }}</label>

			{{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}

			<small>{{ form_help(form.title) }}</small>

			<div class="form-error">
				{{ form_errors(form.title) }}
			</div>
		</div>

		<div class="form-group col-md-3">
			<label>{{ form_label(form.shortDescription) }}</label>

			{{ form_widget(form.shortDescription, { 'attr': {'class': 'form-control'} }) }}

			<small>{{ form_help(form.shortDescription) }}</small>

			<div class="form-error">
				{{ form_errors(form.shortDescription) }}
			</div>
		</div>

		<div class="form-group col-md-6">

			<label>{{ form_label(form.body) }}</label>

			{{ form_widget(form.body, { 'attr': {'class': 'form-control'} }) }}

			<small>{{ form_help(form.body) }}</small>

			<div class="form-error">
				{{ form_errors(form.body) }}
			</div>
		</div>

		<div class="form-group col-md-6">

			<label>{{ form_label(form.imageFile) }}</label>

			{{ form_widget(form.imageFile) }}

			<small>{{ form_help(form.imageFile) }}</small>

			<div class="form-error">
				{{ form_errors(form.imageFile) }}
			</div>
		</div>

		<div class="form-group col-md-6">

			<label>{{ form_label(form.category) }}</label>

			{{ form_widget(form.category) }}

			<small>{{ form_help(form.category) }}</small>

			<div class="form-error">
				{{ form_errors(form.category) }}

			</div>
		</div>

		<div class="col-md-6">
			<input type="submit" class="btn btn-primary"/>
		</div>

		{{ form_end(form) }}

	</form>

{% endblock %}
